<div class="card mb-4">
    {% set first = property.images|first %}
    {% if first %}
        <img src="{{ asset(uploaded_images_directory ~ first.name) | imagine_filter('thumb') }}" class="card-img-top w-100" alt="img" style="">  
    {% else %}
        <img src="{{ asset('/images/rental-icon-free-vector (3).jpeg') | imagine_filter('thumb') }}" class="card-img-top" alt="img" style="width:100%; height:auto;">  
    {% endif %}
    <div class="card-body">
        <h5 class="card-title">
            <a href="{{ path('property.show', {slug: property.slug, id: property.id}) }}">
                {{ property.title }}
            </a>
        </h5>
        <p class="card-text"> {{ property.surface }} m² - {{ property.city }} ({{ property.postalCode }}) </p>
        <div class="text-primary" style="font-size: 2rem; font-weight: bold";>
            {{ property.formattedPrice }} €
        </div>
    </div>
</div>